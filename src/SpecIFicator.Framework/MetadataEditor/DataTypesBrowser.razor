@using MDD4All.SpecIF.ViewModels.Metadata
@using MDD4All.SpecIF.DataModels
@using MDD4All.SpecIF.DataModels.Manipulation
@page "/dataTypes"
@layout MetadataLayout
<h3><span class="bi bi-code-slash" aria-hidden="true"></span>&nbsp;Data Types Browser</h3>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Type</th>
            <th>ID</th>
            <th>Revision</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (DataTypeViewModel viewModel in DataContext.DataTypes)
        {
            <tr>
                <td><strong>@viewModel.DataType.Title</strong></td>
                <td>@viewModel.DataType.Type</td>
                <td>@viewModel.DataType.ID</td>
                <td>@viewModel.DataType.Revision</td>
                <td>@((MarkupString)viewModel.DataType.Description.GetDefaultStringValue())</td>
            </tr>
        }
    </tbody>
</table>
