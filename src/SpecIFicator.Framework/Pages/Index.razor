@using SpecIFicator.Framework.PluginManagement
@using SpecIFicator.Framework.RazorComponents
@page "/"
@layout EmptyLayout

<PageTitle>SpecIFicator</PageTitle>
@if (PluginManager.NoPluginsAvailable())
{
    <NoPluginsDisplay />
}
else
{

    @*<AddPluginStyles></AddPluginStyles>*@

    @if (SpecIfDataProviderFactory.MetadataReader == null)
    {
        <CascadingValue Value="@DataContext">
            <SpecIfDataConnector />
        </CascadingValue>
    }
    else
    {
        NavigationManager.NavigateTo(@DefaultPage);
    }
}
