<div class="dropdown dropstart">
    <button class="btn rounded-circle"
            @onclick="e => _show = !_show"
            @onfocusout="OutFocus">
        <i class="bi bi-person-fill"></i>
    </button>
    <ul class="dropdown-menu dropdown-menu-end @(_show? "show":"")">
        <li>
            <button class="dropdown-item"
                    @onclick="@OnLogoutClick">
                <i class="bi bi-box-arrow-right"></i> @L["Button.Logout"]
            </button>
        </li>
        @if(SpecIfStreamDataSubscriberProvider != null && SpecIfStreamDataSubscriberProvider.StreamDataSubscriber != null)
        {
            <li>
            <button class="dropdown-item"
                    @onclick="@OnUnsubscribeClick">
                <i class="bi bi-stop-circle"></i> @L["Button.Unsubscribe"]
            </button>
        </li>
        }
    </ul>
</div>

